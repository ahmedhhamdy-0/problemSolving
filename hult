import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
	Scanner scanner=new Scanner(System.in);
    int num=scanner.nextInt();
    for(int i=1;i<=num;i++){
        if(i==num){System.out.print(" it ");continue;}
        else if(i%2!=0){System.out.print(" i hate it ");}
        else if(i%2==0){System.out.print(" i love it ");}
    }
    }
}
